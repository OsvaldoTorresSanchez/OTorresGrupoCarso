@model ML.Pokemon
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    <div class="container">
        <div class="row justify-content-center">
            <h2>Detalles de @Model.name</h2>
            <hr />
            @if (Model.name != null)
            {
                <div class="card" style="margin: 10px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img style="margin-top: 7px;" src="@Model.imagen" class="card-img" alt="...">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <h5 class="card-title">Detalles del Pokemon</h5>

                                <p class="card-text text-justify">Altura: @Model.Detalles.Altura m</p>
                                <p class="card-text text-justify">Peso: @Model.Detalles.Peso Kg</p>

                                <h5 class="card-text">Tipo</h5>
                                <div class="btn-group" role="group" aria-label="Basic example">

                                    @foreach (ML.Pokemon pokemon in Model.Detalles.Tipo.Tipos)
                                    {
                                        <a href="@Url.Action("GetAll", "GetAll", new { pag = "type/" + @pokemon.Detalles.Tipo.Id })" class="btn @pokemon.Detalles.Tipo.Nombre">@pokemon.Detalles.Tipo.Nombre</a>
                                    }
                                </div>

                                <br>

                                <h5 class="card-title">Estadisticas de las Habilidades</h5>

                                @foreach (ML.Pokemon pokemon in Model.Detalles.Habilidades.Habilidades)
                                {
                                    <p class="card-text text-justify">@pokemon.Detalles.Habilidades.Name: @pokemon.Detalles.Habilidades.Value</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p>No se encontro el Pokemon.</p>
            }
        </div>
        <a class="btn btn-info" href="@Url.Action("GetAll", "GetAll", new { pag = Model.Previus })">Regresar</a>
    </div>
}

